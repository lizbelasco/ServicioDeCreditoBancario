<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%p]|%d|%X{component}|%X{stakeholder}|%c{1}|%M|[%X{transactionId}]|%m%n" />
        </Console>
    </appenders>

    <loggers>
        <root level="info">
            <appender-ref ref="Console" />
        </root>
    </loggers>
</configuration>